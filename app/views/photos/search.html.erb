<% if @photos.size > 0 %>
  <div class="well well-sm">Displaying first 100 images.</div>
  <div class="row">
  <% @photos.each do |url| %>
    <div class="col-xs-6 col-sm-3 col-md-15">
      <a href="#" class="thumbnail">
        <img src="<%= url %>" class="img-url" alt="">
      </a>
      <div class="btn-group btn-group-justified btn-image-actions" role="group">
        <a type="button" class="btn btn-default btn-sm" title="Save image to gallery">
          <span class="glyphicon glyphicon-floppy-disk"></span>
        </a>
        <a type="button" class="btn btn-default btn-sm" title="Remove image from gallery">
          <span class="glyphicon glyphicon-trash"></span>
        </a>
      </div>
    </div>
  <% end %>
</div>
<% else %>
  <div class="alert alert-warning">Sorry, but we could not find any images related to "<%= params[:q] %>".</div>
<% end %>


